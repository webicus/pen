<h1>New comment</h1>

<% form_for(@comment) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
  	
    <%= f.label :type_id %><br />
	
	<%= f.collection_select(:type_id, Type.find(:all, :order => :sequence), :id, :title, {:prompt => 'Select Pen Type'}) %>

    <%#= f.text_field :type_id %>
  </p>
  <p>
    <%= f.label :color_id %><br />
	<%= f.collection_select(:color_id, Color.find(:all, :order => :sequence), :id, :title, {:prompt => 'Select Color'}) %>

  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', comments_path %>
